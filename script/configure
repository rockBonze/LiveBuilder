#!/bin/sh

# (C) 2012-2016 Fathi Boudra <fathi.boudra@linaro.org>

# Create configuration for live-build.

# You need live-build package installed.

set -e

echo "I: create configuration"
export LB_BOOTSTRAP_INCLUDE="apt-transport-https gnupg"

cd ./build

lb config \
 --apt-indices false \
 --apt-recommends false \
 --apt-secure false \
 --architectures arm64 \
 --archive-areas 'main restricted universe multiverse' \
 --backports false \
 --binary-filesystem ext4 \
 --binary-images tar \
 --bootappend-live "hostname=admin username=admin" \
 --bootstrap-qemu-arch arm64 \
 --bootstrap-qemu-static /usr/bin/qemu-aarch64-static \
 --cache true \
 --cache-packages true \
 --chroot-filesystem none \
 --compression gzip \
 --debootstrap-options "--variant=minbase --include=ca-certificates,gnupg" \
 --distribution focal \
 --gzip-options '-9 --rsyncable' \
 --iso-publisher 'Ubuntu; http://www.ubuntu.com/; ubuntu-users@lists.ubuntu.com' \
 --iso-volume 'Ubuntu Focal $(date +%Y%m%d-%H:%M)' \
 --linux-flavours none \
 --linux-packages none \
 --mode ubuntu \
 --security true \
 --system systemd \
 --updates false	

echo "I: copy customization"

test -d ../custom && cp -rf ../custom/* config/

echo "I: done configure"
